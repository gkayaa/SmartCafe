<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/edit_text_border"
    android:padding="5dp">

    <ImageButton
        android:id="@+id/btnCloseBalanceErrorPopup"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/circleunfilled"
        app:srcCompat="@drawable/ic_baseline_cancel_24" />

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="66dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/sadhamburger" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="255dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat"
        android:text="Custom Alert Dialog Penceresi"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/btnBalancePopup"
        android:layout_width="268dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_border"
        app:srcCompat="@drawable/balance" />

</LinearLayout>