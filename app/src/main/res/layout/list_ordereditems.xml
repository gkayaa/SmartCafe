<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewRes"
        android:layout_width="413dp"
        android:layout_height="42dp"
        android:background="@drawable/edit_text_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/txtPopupListItemName"
        android:layout_width="312dp"
        android:layout_height="31dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="11dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/viewRes"
        app:layout_constraintEnd_toEndOf="@+id/viewRes"
        app:layout_constraintStart_toStartOf="@+id/viewRes"
        app:layout_constraintTop_toTopOf="@+id/viewRes" />

    <TextView
        android:id="@+id/txtPopupListItemCost"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/viewRes"
        app:layout_constraintEnd_toEndOf="@+id/viewRes"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txtPopupListItemName"
        app:layout_constraintTop_toTopOf="@+id/viewRes"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>