<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/edit_text_border">

    <ImageView
        android:id="@+id/imgEnsure"
        android:layout_width="59dp"
        android:layout_height="63dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ensure" />

    <TextView
        android:id="@+id/txtEnsure"
        android:layout_width="369dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/sarala_bold"
        android:text="Changes were not applied. Are you sure to cancel ?"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgEnsure" />

    <ImageButton
        android:id="@+id/btnNo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_baseline_cancel_24_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnUnderstood"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_baseline_check_circle_24_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>